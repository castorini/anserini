<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.apache.log4j.xml" level="info"/>
    <!-- Suppress verbose Parquet and Hadoop internal logging -->
    <Logger name="org.apache.parquet" level="error"/>
    <Logger name="org.apache.parquet.hadoop" level="error"/>
    <Logger name="parquet" level="error"/>
    <Logger name="parquet.hadoop" level="error"/>
    <Logger name="org.apache.hadoop" level="warn"/>
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>
